            </tr>
            @if (Model != null && Model.StatusOfResult == Framework.CommonBLLEntities.BusinessLogicLayerResponseStatus.MessageOK)
            {
                int index = 0;
                foreach (var item in Model.Result)
                {
                    index++;
                    <tr>
