            <hgroup class="title">
                <h2>@ViewBag.Title.</h2>
                <h4>@ViewBag.Message</h4>
            </hgroup>
        </div>
    </section>
}
<article>
<div>
<div class="default">
@using (Html.BeginForm()){
<div>
<div class="buttonContainer">
