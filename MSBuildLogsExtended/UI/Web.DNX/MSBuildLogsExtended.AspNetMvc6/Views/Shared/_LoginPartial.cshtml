@using Microsoft.AspNetCore.Identity
@using MSBuildLogsExtended.AspNetMvc6.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@Framework.Resources.UIStringResource.Common_Welcome @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Framework.Resources.UIStringResource.Account_Register_TitleText</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Framework.Resources.UIStringResource.Account_LogIn_TitleText</a></li>
    </ul>
}
